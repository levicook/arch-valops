#!/bin/bash
#
# tail-logs - Display live validator logs
#
set -euo pipefail
source "$(dirname "$0")/../lib.sh"
cd "$PROJECT_ROOT"

if [ -z "${VALIDATOR_USER:-}" ]; then
    echo "tail-logs: ERROR: VALIDATOR_USER not set"
    exit 1
fi

exec sudo su - "$VALIDATOR_USER" -c "tail -f logs/validator.log"
