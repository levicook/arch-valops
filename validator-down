#!/bin/bash
#
# validator-down - Stop validator process
#
# Usage:
#   validator-down [--user <username>]           # Stop validator process
#   validator-down --clobber [--user <username>] # Stop and completely remove validator setup
#
set -euo pipefail
source "$(dirname "$0")/lib.sh"
cd "$PROJECT_ROOT"

# Default values
VALIDATOR_USER="testnet-validator"
CLOBBER=false

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
    --user)
        VALIDATOR_USER="$2"
        shift 2
        ;;
    --clobber)
        CLOBBER=true
        shift
        ;;
    *)
        log_error "Unknown option: $1"
        log_error "Usage: validator-down [--clobber] [--user <username>]"
        exit 1
        ;;
    esac
done

# Check if user exists
if ! id "$VALIDATOR_USER" &>/dev/null; then
    log_echo "âœ“ User '$VALIDATOR_USER' does not exist (nothing to stop)"
    exit 0
fi

# Stop validator process
stop_validator "$VALIDATOR_USER"

# Handle clobber (complete removal)
if [ "$CLOBBER" = true ]; then
    clobber_user "$VALIDATOR_USER"
fi
