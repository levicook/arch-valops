# Mainnet Environment
# Default configuration for mainnet operations (validator, bitcoin, titan)

source_up

# Validator configuration
export VALIDATOR_USER=mainnet-validator
export ARCH_NETWORK_MODE=mainnet

# Bitcoin configuration (mainnet validator connects to bitcoin mainnet)
export BITCOIN_USER=mainnet-bitcoin
export BITCOIN_NETWORK_MODE=mainnet
export BITCOIN_RPC_USER=bitcoin

# Titan configuration (follows bitcoin network for indexing)
export TITAN_USER=mainnet-titan
export TITAN_NETWORK_MODE=mainnet
export TITAN_MODE=remote # local|remote - whether to run titan locally or use external

# Titan endpoints (mode-aware)
export ARCH_TITAN_ENDPOINT=$(select_by_mode $TITAN_MODE \
    "http://127.0.0.1:3030" \
    "https://titan-public-http.arch.network")

export ARCH_TITAN_SOCKET_ENDPOINT=$(select_by_mode $TITAN_MODE \
    "127.0.0.1:3030" \
    "titan-public-tcp.arch.network:3030")

export ARCH_RPC_BIND_PORT=9002

# Ensure required passwords exist
ensure_dot_env_password_exists BITCOIN_RPC_PASSWORD "$(dirname "${BASH_SOURCE[0]}")"

# Source user customizations
dotenv_if_exists .env
dotenv .env.passwords

echo "ðŸ”§ Mainnet environment loaded"
echo "  VALIDATOR_USER=$VALIDATOR_USER (ARCH_NETWORK_MODE=$ARCH_NETWORK_MODE)"
echo "  BITCOIN_USER=$BITCOIN_USER (BITCOIN_NETWORK_MODE=$BITCOIN_NETWORK_MODE)"
if [[ "${TITAN_MODE:-remote}" == "local" ]]; then
    echo "  TITAN_USER=$TITAN_USER (TITAN_NETWORK_MODE=$TITAN_NETWORK_MODE, mode=$TITAN_MODE)"
else
    echo "  TITAN_ENDPOINT=$ARCH_TITAN_ENDPOINT (mode=${TITAN_MODE:-remote})"
fi
echo ""
echo "ðŸ“‹ Available commands:"
echo "  # Validator operations:"
echo "  validator-init      # Initialize mainnet validator (needs VALIDATOR_ENCRYPTED_IDENTITY_KEY)"
echo "  validator-up        # Start mainnet validator"
echo "  validator-down      # Stop mainnet validator"
echo "  validator-dashboard # Monitor mainnet validator"
echo ""
echo "  # Bitcoin operations:"
echo "  bitcoin-up          # Start mainnet bitcoin node"
echo "  bitcoin-down        # Stop mainnet bitcoin node"
echo ""
if [[ "${TITAN_MODE:-remote}" == "local" ]]; then
    echo "  # Titan operations (local mode):"
    echo "  titan-up            # Start mainnet titan indexer"
    echo "  titan-down          # Stop mainnet titan indexer"
    echo ""
fi
echo ""
echo "ðŸ’¡ Customize by creating .env file in this directory"
